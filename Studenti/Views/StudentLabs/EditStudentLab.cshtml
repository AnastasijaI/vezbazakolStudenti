@model Studenti.Models.StudentLab

@{
    ViewData["Title"] = "Edit Student Lab Details";
}

<h1>Edit Student Lab Details</h1>

<h4>Student: @Model.Student.ImePrezime</h4>
<h4>Lab Exercise: @Model.LabVezba.Naslov</h4>

<form asp-action="EditStudentLab">
    <div class="form-group">
        <label asp-for="Zavrsena" class="control-label"></label>
        <input asp-for="Zavrsena" class="form-control" />
        <span asp-validation-for="Zavrsena" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Poeni" class="control-label"></label>
        <input asp-for="Poeni" class="form-control" />
        <span asp-validation-for="Poeni" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="DataZavrsuvanje" class="control-label"></label>
        <input asp-for="DataZavrsuvanje" class="form-control" />
        <span asp-validation-for="DataZavrsuvanje" class="text-danger"></span>
    </div>
    <input type="hidden" asp-for="Id" />
    <input type="hidden" asp-for="StudentId" />
    <input type="hidden" asp-for="LabVezbaId" />
    <div class="form-group">
        <input type="submit" value="Save" class="btn btn-primary" />
    </div>
</form>

<div>
    <a asp-action="Students" asp-controller="LabVezbas" asp-route-id="@Model.LabVezbaId">Back to List</a>
</div>
